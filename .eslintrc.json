{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": "off",
    "quotes": "off",
    "prettier/prettier": "error",
    "comma-dangle": "off",
    "space-before-function-paren": "off",
    "func-names": "off",
    "no-underscore-dangle": "off",
    "no-await-in-loop": "off",
    "camelcase": "off",
    "no-plusplus": "off",
    "no-use-before-define": "off"
  }
}
